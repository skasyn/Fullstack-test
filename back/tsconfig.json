{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "paths": {
      "*": [
          "node_modules/*",
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}